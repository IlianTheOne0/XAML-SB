<UserControl
    x:Class="DesktopApp.Pages.SignUpPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    mc:Ignorable="d"
   
    MinWidth="750"
    MinHeight="375"
    
    Background="#301B52"
>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.10*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="0.10*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <Viewbox Grid.Row="1" Stretch="Uniform">
            <StackPanel Orientation="Vertical" Margin="20">
                <Border
                    Width="200"
                    Height="200"
                    
                    HorizontalAlignment="Center"
                >
                    <Image
                        Source="/Assets/Images/sign_in_image.png" 
                        Stretch="UniformToFill"
                    />
                </Border>

                <StackPanel Margin="0, 20, 0, 0">
                    <TextBlock
                        Text="Lib Tech"
                        
                        FontFamily="{StaticResource RobotoBold}" 
                        FontWeight="Bold"
                        FontSize="24"
                    
                        Foreground="White"
                        
                        TextAlignment="Center"
                    />

                    <TextBlock
                        Text="The best library app for reading"
                        
                        FontFamily="{StaticResource RobotoBold}"
                        FontWeight="Bold"
                        FontSize="14"
                        
                        Foreground="White"
                        
                        TextAlignment="Center"
                        TextWrapping="Wrap"
                    />
                </StackPanel>
            </StackPanel>
        </Viewbox>

        <Grid Grid.Row="1" Grid.Column="1" Margin="60, 0, 60, 0" VerticalAlignment="Center">
            <Rectangle
                MinWidth="260"
                MaxHeight="320"
                
                Fill="#F4F3F3"
                Stroke="#BDBDBD"
                
                StrokeThickness="2"
                
                RadiusX="20"
                RadiusY="20"
            />
            <ScrollViewer
                VerticalScrollBarVisibility="Hidden"
                HorizontalScrollBarVisibility="Hidden"
                
                Style="{StaticResource MaterialDesignScrollViewer}"
            >
                <StackPanel
                    MinWidth="260"
                    
                    HorizontalAlignment="Center"
                    
                    Margin="25, 23, 25, 29" 
                >
                    <TextBlock
                        Text="Sign up"
                        
                        FontFamily="{StaticResource RobotoBold}"
                        FontWeight="Bold"
                        FontSize="24"
                        
                        Foreground="#301B52"
                        
                        TextAlignment="Center"
                        HorizontalAlignment="Center"
                        
                        Margin="0, 0, 0, 20"
                    />

                    <TextBox                                                          
                        MinWidth="240"
                        MinHeight="50"
                        
                        FontFamily="{StaticResource RobotoBold}"
                        FontWeight="Bold"
                        FontSize="12"
                         
                        Background="#F6F6F6"
                        Foreground="#000000"
                        BorderBrush="#ABAAAA"
                        
                        SelectionBrush="#FF5B5B5B"
                        CaretBrush="Black"
                        
                        Margin="0, 0, 0, 13"
                    >
                        <TextBox.Style>
                            <Style TargetType="TextBox" BasedOn="{StaticResource MaterialDesignOutlinedTextBox}">
                                <Setter Property="materialDesign:HintAssist.Hint" Value="Email"/>
                                <Setter Property="materialDesign:HintAssist.Foreground" Value="#ABAAAA"/>

                                <Setter Property="materialDesign:TextFieldAssist.HasOutlinedTextField" Value="False"/>
                                <Setter Property="materialDesign:TextFieldAssist.DecorationVisibility" Value="Hidden"/>

                                <Setter Property="materialDesign:TextFieldAssist.UnderlineBrush" Value="#ABAAAA"/>
                                <Setter Property="materialDesign:TextFieldAssist.TextFieldCornerRadius" Value="20"/>
                                <Setter Property="materialDesign:TextFieldAssist.TextBoxViewMargin" Value="1"/>
                            </Style>
                        </TextBox.Style>
                    </TextBox>

                    <TextBox                                                          
                        MinWidth="240"
                        MinHeight="50"
                        
                        FontFamily="{StaticResource RobotoBold}"
                        FontWeight="Bold"
                        FontSize="12"
                         
                        Background="#F6F6F6"
                        Foreground="#000000"
                        BorderBrush="#ABAAAA"
                        
                        SelectionBrush="#FF5B5B5B"
                        CaretBrush="Black"
                        
                        Margin="0, 0, 0, 13"
                    >
                        <TextBox.Style>
                            <Style TargetType="TextBox" BasedOn="{StaticResource MaterialDesignOutlinedTextBox}">
                                <Setter Property="materialDesign:HintAssist.Hint" Value="User Name"/>
                                <Setter Property="materialDesign:HintAssist.Foreground" Value="#ABAAAA"/>

                                <Setter Property="materialDesign:TextFieldAssist.HasOutlinedTextField" Value="False"/>
                                <Setter Property="materialDesign:TextFieldAssist.DecorationVisibility" Value="Hidden"/>

                                <Setter Property="materialDesign:TextFieldAssist.UnderlineBrush" Value="#ABAAAA"/>
                                <Setter Property="materialDesign:TextFieldAssist.TextFieldCornerRadius" Value="20"/>
                                <Setter Property="materialDesign:TextFieldAssist.TextBoxViewMargin" Value="1"/>
                            </Style>
                        </TextBox.Style>
                    </TextBox>

                    <StackPanel>
                        <PasswordBox
                            MinWidth="240"
                            MinHeight="50"
                        
                            FontFamily="{StaticResource RobotoBold}"
                            FontWeight="Bold"
                            FontSize="12"
     
                            Background="#F6F6F6"
                            Foreground="#000000"
                            BorderBrush="#ABAAAA"
                            SelectionBrush="#FF5B5B5B"
                            CaretBrush="Black"
                        
                            BorderThickness="1"
                            
                            Margin="0, 0, 0, 24"
                        >
                            <PasswordBox.Style>
                                <Style TargetType="PasswordBox" BasedOn="{StaticResource MaterialDesignOutlinedRevealPasswordBox}">
                                    <Setter Property="materialDesign:HintAssist.Hint" Value="Password"/>
                                    <Setter Property="materialDesign:HintAssist.Foreground" Value="#ABAAAA"/>

                                    <Setter Property="materialDesign:TextFieldAssist.HasOutlinedTextField" Value="False"/>
                                    <Setter Property="materialDesign:TextFieldAssist.DecorationVisibility" Value="Hidden"/>

                                    <Setter Property="materialDesign:TextFieldAssist.UnderlineBrush" Value="#ABAAAA"/>
                                    <Setter Property="materialDesign:TextFieldAssist.TextFieldCornerRadius" Value="20"/>
                                    <Setter Property="materialDesign:TextFieldAssist.TextBoxViewMargin" Value="1"/>

                                    <Setter Property="materialDesign:TextFieldAssist.HasClearButton" Value="True"/>
                                </Style>
                            </PasswordBox.Style>
                        </PasswordBox>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <Button
                                Width="87"
                                Height="26"
    
                                Background="#DB0916"
    
                                BorderThickness="0"
                                
                                Margin="0, 0, 50, 0"
                            >
                                <Button.Style>
                                    <Style TargetType="Button"  BasedOn="{StaticResource MaterialDesignRaisedDarkButton}">
                                        <Setter Property="materialDesign:ButtonAssist.CornerRadius" Value="15"/>
                                    </Style>
                                </Button.Style>

                                <TextBlock
                                    Text="Sign Up"
        
                                    FontFamily="{StaticResource RobotoBold}"
                                    FontWeight="Bold"
                                    FontSize="12"
        
                                    Foreground="#ffffff"
                                />
                            </Button>
                            <Button
                                Width="87"
                                Height="26"
                                
                                Background="#301B52"
                                
                                BorderThickness="0"
                            >
                                <Button.Style>
                                    <Style TargetType="Button"  BasedOn="{StaticResource MaterialDesignRaisedDarkButton}">
                                        <Setter Property="materialDesign:ButtonAssist.CornerRadius" Value="15"/>
                                    </Style>
                                </Button.Style>

                                <TextBlock
                                    Text="Sign In"
                                    
                                    FontFamily="{StaticResource RobotoBold}"
                                    FontWeight="Bold"
                                    FontSize="12"
                                    
                                    Foreground="#ffffff"
                            />
                            </Button>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</UserControl>